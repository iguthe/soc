const DATA=[
{cat:"Splunk",items:[
{cmd:'index=auth sourcetype=linux_secure "Failed password" | stats count by user, src',desc:"Detecta intentos de inicio de sesión fallidos en Linux, agrupados por usuario y origen."},
{cmd:'index=windows EventCode=4625 | stats count by Account_Name, Workstation_Name',desc:"Muestra intentos fallidos de autenticación en sistemas Windows."},
{cmd:'index=wineventlog EventCode=4624 OR EventCode=4634 | stats count by Account_Name, host',desc:"Registra los inicios y cierres de sesión exitosos en sistemas Windows."},
{cmd:'index=wineventlog EventCode=4720 OR EventCode=4722 | table _time, user, src',desc:"Detecta creación o habilitación de cuentas de usuario."},
{cmd:'index=wineventlog EventCode=4723 OR EventCode=4724 | table _time, user, src',desc:"Detecta cambios de contraseña o restablecimientos en AD."},
{cmd:'index=sysmon EventCode=1 | stats count by process_name, parent_process_name',desc:"Muestra procesos creados y sus procesos padres."},
{cmd:'index=sysmon EventCode=11 file_name!=null | stats count by file_name, dest',desc:"Detecta creación de archivos sospechosos o ejecutables."},
{cmd:'index=sysmon EventCode=7 | table _time, ImageLoaded, process_name',desc:"Monitorea carga de librerías DLL sospechosas."},
{cmd:'index=proxy OR index=web http_method=POST | top url',desc:"Muestra los destinos HTTP más utilizados con método POST (posible exfiltración)."},
{cmd:'index=dns "type=A" | stats count by query | sort -count',desc:"Muestra las consultas DNS más frecuentes."},
{cmd:'index=dns query=*base64* OR query=*dnscat*',desc:"Detecta intentos de tunneling DNS o exfiltración mediante subdominios codificados."},
{cmd:'index=firewall action=blocked | stats count by src_ip, dest_ip',desc:"Muestra conexiones bloqueadas por el firewall."},
{cmd:'index=sysmon EventCode=10 | table _time, SourceImage, TargetImage',desc:"Detecta inyecciones de código entre procesos (process hollowing, etc.)."},
{cmd:'index=windows EventCode=7045 | table _time, Service_Name, Path',desc:"Detecta instalación de nuevos servicios persistentes."},
{cmd:'index=sysmon EventCode=3 dest_port=445 OR dest_port=139 | stats count by src_ip, dest_ip',desc:"Detecta movimiento lateral mediante SMB."},
{cmd:'index=wineventlog EventCode=4624 Logon_Type=3 | stats dc(src_ip) by user',desc:"Detecta conexiones RDP o de red sospechosas por usuario."},
{cmd:'index=sysmon EventCode=1 process_name=powershell.exe | stats count by CommandLine',desc:"Identifica uso de PowerShell con posibles comandos peligrosos."},
{cmd:'index=sysmon CommandLine=*Invoke-Mimikatz*',desc:"Detecta ejecución de Mimikatz u otras herramientas de robo de credenciales."},
{cmd:'index=sysmon CommandLine="*EncodedCommand*" | table _time, CommandLine',desc:"Detecta comandos PowerShell codificados en base64."},
{cmd:'index=wineventlog EventCode=1102 OR EventCode=104',desc:"Detecta limpieza de logs en Windows (posible ocultamiento de rastros)."},
{cmd:'index=sysmon EventCode=1 process_name=wmic.exe | table _time, user, CommandLine',desc:"Detecta uso de WMIC para movimiento lateral o enumeración remota."},
{cmd:'index=sysmon EventCode=3 dest_port=21 OR dest_port=22 | stats count by src_ip, dest_ip',desc:"Monitorea conexiones FTP o SSH inusuales (posible exfiltración)."},
{cmd:'index=sysmon EventCode=3 dest_port=443 OR dest_port=80 | stats count by dest_ip, bytes_out',desc:"Muestra volumen de tráfico HTTP/HTTPS saliente por host."},
